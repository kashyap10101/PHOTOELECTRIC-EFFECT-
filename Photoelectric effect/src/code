<script>
const h = 6.626e-34; const e = 1.602e-19; const c = 3e8;
function updateFWUnits(){ const type=document.getElementById('inputType').value; const unit=document.getElementById('fwUnit'); if(type==='freq'){unit.innerHTML=`<option value="Hz">Hz</option><option value="kHz">kHz</option><option value="MHz">MHz</option><option value="GHz">GHz</option>`}else{unit.innerHTML=`<option value="m">m</option><option value="nm">nm</option><option value="pm">pm</option>`}}updateFWUnits();
function convertEnergy(v,u){ if(u==='kJ') return v*1000; if(u==='eV') return v*e; return v }
function convertInput(){ let type=document.getElementById('inputType').value; let value=parseFloat(document.getElementById('fwValue').value); let unit=document.getElementById('fwUnit').value; if(isNaN(value)||value<=0) return null; if(type==='freq'){ const scale={Hz:1,kHz:1e3,MHz:1e6,GHz:1e9}; return value*scale[unit]; } const scaleW={m:1,nm:1e-9,pm:1e-12}; return c/(value*scaleW[unit]); }

// create ejected electron visual
function spawnEjected(){ const stage=document.querySelector('.stage'); const el=document.createElement('div'); el.className='ejected'; // randomize start near metal
  el.style.left = (30 + Math.random()*120) + 'px'; el.style.bottom = (220 + Math.random()*30) + 'px'; stage.appendChild(el);
  // trigger animation
  requestAnimationFrame(()=> el.classList.add('animate'));
  // remove after animation
  setTimeout(()=> el.remove(),1600);
}

function calculateAll(){ const results=document.getElementById('results'); const f=convertInput(); let phi=parseFloat(document.getElementById('phi').value); let phi_unit=document.getElementById('phi_unit').value; if(f==null||isNaN(phi)){ results.innerHTML='Enter values to calculate.'; return; } phi=convertEnergy(phi,phi_unit); const photonEnergy=h*f; const thresholdFreq=phi/h; const thresholdWavelength=c/thresholdFreq; if(photonEnergy<phi){ results.innerHTML=`<p><strong>No emission:</strong> Photon energy too low.</p><p><strong>Threshold f‚ÇÄ:</strong> ${thresholdFreq.toExponential(3)} Hz</p><p><strong>Œª‚ÇÄ:</strong> ${thresholdWavelength.toExponential(3)} m</p>`; return; }
  // display values
  const kinetic=photonEnergy-phi; const stop=kinetic/e; results.innerHTML=`<p><strong>Photon Energy:</strong> ${photonEnergy.toExponential(3)} J</p><p><strong>Threshold f‚ÇÄ:</strong> ${thresholdFreq.toExponential(3)} Hz</p><p><strong>K.E:</strong> ${kinetic.toExponential(3)} J</p><p><strong>Stopping Potential V‚ÇÄ:</strong> ${stop.toFixed(2)} V</p>`;
  // spawn visuals proportional to energy (more energy -> more ejected electrons)
  const count = Math.min(6, 1 + Math.floor((kinetic / (1e-19)))); // rough scaling
  for(let i=0;i<count;i++){ setTimeout(spawnEjected, 120*i); }
}
</script>

